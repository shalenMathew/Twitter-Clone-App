<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Thoughts" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>



    <style name="demo">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_15mdp</item>
    </style>

    <style name="demo2">
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10mdp</item>
    </style>


    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <!-- Customize the color of the overflow icon -->
        <item name="actionOverflowButtonStyle">@style/AppOverflowButton</item>
    </style>

    <style name="AppOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="btnSolidRounded">
        <item name="android:textSize">@dimen/_15mdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:background">@drawable/rectangle_bg_black_900_radius_20_5</item>
        <item name="android:paddingStart">@dimen/_30mdp</item>
        <item name="android:paddingEnd">@dimen/_30mdp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btnSolidRounded2">
        <item name="android:textSize">@dimen/_10mdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rectangle_bg_black_900_radius_20_5</item>
        <item name="android:paddingStart">@dimen/_8mdp</item>
        <item name="android:paddingEnd">@dimen/_8mdp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textAllCaps">false</item>
    </style>



    <style name="edit_style">

        <item name="android:layout_marginStart">@dimen/_12mdp</item>
        <item name="android:layout_marginEnd">@dimen/_12mdp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/edit_back</item>
    </style>

</resources>